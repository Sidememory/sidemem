{ pkgs, ... }:

let
  # --- THE SWITCHES ---
  menuPosition = "C"; # "C" for Center, "M" for Mouse location
  
  # Retro Palette (4 bits style 8-color)
  amber  = "yellow";
  active = "brightyellow";
  lite   = "green";
  alert  = "red";
in
{
  programs.tmux = {
    enable = true;
    terminal = "xterm-256color";
    
    plugins = with pkgs.tmuxPlugins; [ 
      sensible     
      yank         
      resurrect    
      continuum    
    ];

    extraConfig = ''
      # --- 4 bits style 8-COLOR THEME ---
      set -g status-style bg=black,fg=${amber}
      set -g window-style "fg=${amber},bg=black"
      set -g window-active-style "fg=${active},bg=black"

      # Tab Styling
      set -g window-status-current-style "fg=black,bg=${amber},bold"
      set -g window-status-style "fg=${lite},bg=black"
      set -g window-status-format " #[fg=${alert}]â€¢#[fg=${lite}]#I:#W "
      set -g window-status-current-format " â˜… #I:#W "
      set -g window-status-separator ""

      # --- LOGIC & USABILITY ---
      set -g base-index 1
      setw -g pane-base-index 1
      set -g renumber-windows on
      setw -g mode-keys vi
      set -g mouse on
      set -g allow-rename on
      setw -g automatic-rename on

      # --- STARRY CENTERED MENU ---
      # Note: Every line must have "Label" "Key" "Command"
      unbind -n MouseDown3Pane
      bind -n MouseDown3Pane display-menu -x ${menuPosition} -y ${menuPosition} \
        "â˜… SYSTEM COMMANDS â˜…"   "" "" \
        "â€¢ Paste from Windows"   p "run \"tmux set-buffer '$(powershell.exe -Command Get-Clipboard)'; tmux paste-buffer\"" \
        "â€¢ Select All Text"      a "copy-mode; send-keys -X history-top; send-keys -X begin-selection; send-keys -X history-bottom" \
        "â€¢ Synchronize Panes"    S "setw synchronize-panes" \
        " "                      "" "" \
        "â˜… DOCUMENTATION â˜…"      "" "" \
        "ðŸ“œ Toggle Lab Help"     h "display-popup -E -w 80% -h 80% 'less -R -~ ~/help.md'" \
        "â€¢ Exit Menu"            q ""

      # --- NAVIGATION (F-KEYS & ALT) ---
      set -g prefix F1
      unbind C-b
      bind F1 send-prefix
      
      bind -n F2 new-window -c "#{pane_current_path}"
      bind -n F3 previous-window
      bind -n F4 next-window
      bind -n F5 split-window -h -c "#{pane_current_path}"
      bind -n F6 split-window -v -c "#{pane_current_path}"
      bind -n F7 resize-pane -Z
      bind -n F9 copy-mode
      bind -n M-c copy-mode
      bind -n F10 confirm-before -p "Kill pane? (y/n)" kill-pane

      # --- MANUAL HELP BINDING ---
      # Press F1 then h
      bind h display-popup -E -w 80% -h 80% "less -R -~ ~/help.md"
      
      # Plugin Settings
      set -g @catppuccin_flavor "mocha"
      set -g @catppuccin_status_background "default"




    '';
  };
}

